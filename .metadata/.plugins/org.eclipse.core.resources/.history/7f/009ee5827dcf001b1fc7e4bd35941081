package com.nashtechglobal;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

import com.nashtechglobal.datamodel.Post;
import com.nashtechglobal.service.PostService;

public class Main {
	private static final List<Post> posts = new ArrayList<>();
	
	static {
		posts.add(new Post(1, "Tran Duong", "Java 101", "Debug in Java", "Debug in Java is not a nightmare", LocalDate.now()));
		posts.add(new Post(2, "Robert C.Martin", "Clean Code", "How to write clean code", "Clean code is a must for every developer", LocalDate.now()));
	}
	
    public static void main(String[] args) {
        PostService postService = new PostService();
        
        List<Post postByUser = postService.findByUsername(posts, "Tran Duong");
    }
}
